<%- include('./partials/head.ejs') %>

<div class="container">
	<h4>Login</h4>
	<span id="err-msg"><% if (messages.error) { %> <%= messages.error %> <% } %></span>
	<form action="/login" method="POST">
		<label for="username">Username:</label><br />
		<input class="form-input" type="text" id="fname" name="username" /><br />
		<label for="password">Password:</label><br />
		<input class="form-input" type="password" id="password" name="password" /><br /><br />
		<input class="form-btn" type="submit" value="Login" />
	</form>
	<a href="/register">Register Page</a>
	<a href="/">Home</a>
</div>

